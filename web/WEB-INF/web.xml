    </servlet>
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterValidation</servlet-name>
        <servlet-class>servlet.RegisterValidation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employeeservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartmentServlet</servlet-name>
        <url-pattern>/departmentservlet</url-pattern>
